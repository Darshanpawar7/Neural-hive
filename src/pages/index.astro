---
import BaseLayout from "../layouts/BaseLayout.astro";
import PostCard from "../components/PostCard.astro";

const modules = import.meta.glob("../content/posts/*.md", { eager: true }) as any;
const posts = Object.values(modules)
  .map((m: any) => m.frontmatter)
  .sort((a: any, b: any) => new Date(b.date).getTime() - new Date(a.date).getTime());
---

<BaseLayout title="ML Mondays">
  <div class="min-h-screen flex flex-col">
      <div class="flex justify-between items-center w-full mt-10">
        <img 
          src="/uploads/banner.png" 
          class="w-full max-w-4xl mx-auto select-none" 
          draggable="false" 
          alt="Neural Hive Honeycomb"
        />
      </div>

      <div class="max-w-4xl mx-auto mt-28 px-4 text-center flex flex-col items-center">
        <h1 class="text-5xl md:text-6xl font-black tracking-tighter uppercase mb-8 bg-clip-text text-transparent bg-gradient-to-r from-black to-gray-600 dark:from-white dark:to-gray-400 no-underline decoration-transparent select-none">
          ML Mondays
        </h1>

        <p class="text-xl leading-relaxed opacity-90 dark:text-gray-200 max-w-2xl mx-auto mt-12">
          ML Mondays is a curated space for learning, curiosity, and thoughtful writing
          around Machine Learning and Artificial Intelligence.
          <br /><br />
          Whether you're just beginning your ML journey or diving deep into advanced ideas,
          our goal is to make complex concepts clear, meaningful, and inspiring — one Monday at a time.
        </p>
      </div>
      
    <div class="mt-auto pb-10 text-center animate-bounce opacity-40">
        <p class="text-[10px] uppercase tracking-[0.3em] dark:text-white font-mono">Exploring the hive</p>
        <span class="dark:text-white text-lg">↓</span>
      </div>
    </div>

    <!-- Ethos Section -->
    <section class="max-w-5xl mx-auto px-4 py-24 border-y border-gray-100 dark:border-white/5 bg-gray-50/30 dark:bg-white/[0.01] ethos-grid">
      <div class="text-center mb-16">
        <h2 class="text-[10px] uppercase tracking-[0.5em] font-mono mb-4 text-yellow-600 dark:text-yellow-500">The Philosophy</h2>
        <h3 class="text-3xl md:text-4xl font-black tracking-tight uppercase no-underline">The Honeycomb Ethos</h3>
        <div class="h-1 w-20 bg-yellow-500 mx-auto mt-6"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {[
          {
            title: "Curiosity",
            desc: "Prying open the black boxes of AI with relentless inquiry and building-first learning.",
            icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/></svg>`
          },
          {
            title: "Collaboration",
            desc: "The hive thrives together. We share knowledge openly to accelerate our collective growth.",
            icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/></svg>`
          },
          {
            title: "Responsibility",
            desc: "Building with ethics at the core. Ensuring AI serves humanity with transparency and care.",
            icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>`
          }
        ].map(item => (
          <div class="group p-8 rounded-3xl border border-gray-100 dark:border-white/5 bg-white dark:bg-white/[0.02] transition-all duration-300 hover:-translate-y-2 hover:shadow-xl hover:shadow-yellow-500/5">
            <div class="w-16 h-16 rounded-2xl bg-yellow-50 dark:bg-yellow-500/10 flex items-center justify-center text-yellow-600 dark:text-yellow-500 mb-6 group-hover:scale-110 transition-transform duration-500">
              <Fragment set:html={item.icon} />
            </div>
            <h4 class="text-xl font-bold mb-3 no-underline">{item.title}</h4>
            <p class="text-sm leading-relaxed opacity-60 dark:text-gray-300">{item.desc}</p>
          </div>
        ))}
      </div>
    </section>

    <div class="max-w-5xl mx-auto px-4 py-24">
      <div class="flex flex-col md:flex-row md:items-end justify-between mb-16 gap-6">
        <div>
          <h2 class="text-[10px] uppercase tracking-[0.5em] font-mono mb-4 text-yellow-600 dark:text-yellow-500">The Notebooks</h2>
          <h3 class="text-3xl md:text-4xl font-black tracking-tight uppercase no-underline">Recent Posts</h3>
        </div>
        <a href="/posts" class="text-xs font-bold uppercase tracking-widest border-b-2 border-yellow-500 pb-1 hover:text-yellow-600 transition-colors no-underline">View Archive</a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {posts.map((post: any) => (
          <article class="group bg-white dark:bg-white/[0.02] border border-gray-100 dark:border-white/5 rounded-[2rem] overflow-hidden transition-all duration-500 hover:shadow-2xl hover:shadow-yellow-500/10">
            <div class="aspect-[16/10] overflow-hidden relative">
              <img 
                src={post.hero_image} 
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" 
                alt={post.title}
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 flex items-end p-8">
                <span class="text-white text-xs font-bold uppercase tracking-widest">Read Article →</span>
              </div>
            </div>

            <div class="p-8">
              <div class="flex items-center gap-4 mb-4">
                <span class="text-[9px] font-mono uppercase tracking-widest py-1 px-3 rounded-full bg-yellow-500/10 text-yellow-600 dark:text-yellow-500">
                  {post.date}
                </span>
                <span class="text-[9px] font-mono opacity-40 uppercase tracking-widest">
                  {post.read_time} read
                </span>
              </div>

              <h2 class="text-xl md:text-2xl font-bold mb-4 leading-tight group-hover:text-yellow-600 dark:group-hover:text-yellow-500 transition-colors duration-300">
                <a href={`/posts/${post.slug}`} class="no-underline">{post.title}</a>
              </h2>

              <p class="text-sm leading-relaxed opacity-60 dark:text-gray-300 line-clamp-2">
                {post.description}
              </p>
            </div>
          </article>
        ))}
      </div>
    </div>
</BaseLayout>

<style>
  h1, h2, h3, h4 {
    text-decoration: none !important;
  }

  .ethos-grid {
    background-image: radial-gradient(rgba(234, 179, 8, 0.05) 1px, transparent 1px);
    background-size: 20px 20px;
  }
</style>
